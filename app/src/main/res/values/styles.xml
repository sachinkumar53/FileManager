<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listSeparatorTextViewStyle">@style/AppTheme.ListSeparator</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
        <item name="android:textAppearanceMedium">@style/AppTheme.TextAppearanceLarge</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listSeparatorTextViewStyle">@style/AppTheme.ListSeparator</item>
        <item name="android:textAppearanceMedium">@style/AppTheme.TextAppearanceLarge</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Auto" parent="@style/Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listSeparatorTextViewStyle">@style/AppTheme.ListSeparator</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="android:textAppearanceMedium">@style/AppTheme.TextAppearanceLarge</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Light" parent="@style/AppTheme" />

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="android:textAppearanceLarge">@style/AppTheme.TextAppearanceLarge</item>
    </style>

    <style name="AppTheme.TextAppearanceLarge">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.ListSeparator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:paddingStart" tools:targetApi="17">?attr/listPreferredItemPaddingLeft
        </item>
        <item name="android:paddingLeft">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingEnd" tools:targetApi="17">?attr/listPreferredItemPaddingRight
        </item>
        <item name="android:paddingRight">?attr/listPreferredItemPaddingRight</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

